<h1 align="center">All Alpha Bloggers</h1>

<div class="center">
<div class="d-flex align-items-center justify-content-center ">
  <%= will_paginate %>
</div>
  <% @users.each do |user| %>
    <ul class="listing">
        <div class="row justify-content-md-center">
          <div class="card card-body bg-light col-md-4">
            <li> <%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title">
            <%= link_to user.username, user_path(user) %>
            </li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
              <li> <%= link_to "Delete this user", user_path(user), method: :delete,
                        data: { confirm: "Are you sure you want the delete the user and all the articles" },
                        class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
    </ul>
  <% end %>
<div class="d-flex align-items-center justify-content-center ">
  <%= will_paginate %>
</div>
</div>